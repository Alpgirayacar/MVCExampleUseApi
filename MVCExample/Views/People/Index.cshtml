
@model IEnumerable<MVCExample.Models.Person>

@{

    ViewData["Title"] = "Persons";
}
    


<table class="table table-bordered">
    <tr>
        <th>Film ID</th>
        <th>Film Adı</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td><a href="#" class="btn btn-danger">Sil</a></td>
            <td><a href="#" class="btn btn-success">Düzenle</a></td>
        </tr>
    }
</table>